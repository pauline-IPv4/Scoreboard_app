{% extends 'base.html.twig' %}

{% block title %}Suppression d'un jeu{% endblock %}

{% block body %}
    <h2>Confirmation suppression du jeu</h2>
    <ul class="liste-group">
        <li class="liste-group-item">Titre: {{ game.title }}</li>
        <li class="liste-group-item">Entre: {{ game.minplayers }} et {{ game.maxplayers }} joueurs</li>
    </ul>

    <form method="POST">
        <div class="d-flex">
            <button type="submit">Confirmer</button>
            <a href="{{ path('app_admin_game') }}" class="btn-btn-danger">Annuler</a>
        </div>
    </form>
{% endblock %}